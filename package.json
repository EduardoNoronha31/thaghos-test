{
  "name": "thaghostest",
  "version": "0.1.0",
  "description": "A Next JS application using Jest to do form status validation and Cypress to validate form success status.",
  "repository": "git+https://github.com/EduardoNoronha31/thaghostest.git",
  "author": "Eduardo Noronha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EduardoNoronha31/thaghostest/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "commit": "cz"
  },
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.1",
    "@mui/material": "^5.5.2",
    "formik": "^2.2.9",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "17.0.22",
    "@types/react": "17.0.41",
    "@types/yup": "^0.29.13",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "exact": "^0.8.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.0",
    "typescript": "4.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    },
    "config": {
      "commitizen": {
        "path": "cz-conventional-changelog"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
